{
    "name": "ectouch/ectouch",
    "description": "A Modern E-Commerce Platform.",
    "keywords": ["ectouch", "b2c", "o2o", "shop", "mall", "wechat"],
    "homepage": "https://ectouch.cn",
    "license": "GPL-3.0",
    "type": "project",
    "support": {
        "issues": "https://github.com/ectouch/ectouch/issues?state=open",
        "forum": "https://ectouch.cn/forum/",
        "wiki": "https://ectouch.cn/wiki/",
        "source": "https://github.com/ectouch/ectouch"
    },
    "require": {
        "php": "^7.1.3",
        "endroid/qr-code": "^3.4",
        "firebase/php-jwt": "^5.0",
        "nesbot/carbon": "^2.1",
        "overtrue/easy-sms": "^1.1",
        "overtrue/pinyin": "^3.0",
        "overtrue/wechat": "^4.1",
        "phpoffice/phpspreadsheet": "^1.4",
        "sentry/sentry": "^1.9",
        "symfony/console": "^4.1",
        "symfony/filesystem": "^4.1",
        "topthink/thinkphp": "^3.2",
        "workerman/phpsocket.io": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "config/constant.php",
            "app/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php build.php"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
